@model ReportModel

<div class="container mt-4">
    <h2 class="text-center mb-4">News Report</h2>

    <form method="get" class="row g-3 align-items-center mb-4">
        <div class="col-md-4">
            <label for="startDate" class="form-label fw-bold">Start Date:</label>
            <input type="date" id="startDate" name="startDate" class="form-control"
                   value="@ViewBag.StartDate?.ToString("yyyy-MM-dd")" required>
        </div>
        <div class="col-md-4">
            <label for="endDate" class="form-label fw-bold">End Date:</label>
            <input type="date" id="endDate" name="endDate" class="form-control"
                   value="@ViewBag.EndDate?.ToString("yyyy-MM-dd")" required>
        </div>
        <div class="col-md-4 d-flex align-items-end">
            <button type="submit" class="btn btn-primary w-100">Generate Report</button>
        </div>
    </form>

    <div class="alert alert-info text-center">
        <h5 class="mb-0">Report Period: <strong>@Model.ReportPeriod</strong></h5>
    </div>

    <h5 class="mt-3 p-0 fw-bold">Total News: <span class="badge bg-success">@Model.TotalNews</span></h5>

    <h5 class="mt-3 p-0 fw-bold">Total News by Status:</h5>
    <div class="datatable-container">
        <table id="datatablesSimple" class="datatable-table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Status</th>
                    <th scope="col">Total News</th>
                </tr>
            </thead>
            <tbody>
                <tr data-index="0">
                    <td>Tiger Nixon</td>
                    <td>System Architect</td>
                    <td>Edinburgh</td>
                    
                </tr>
                <tr data-index="1">
                    <td>Garrett Winters</td>
                    <td>Accountant</td>
                    <td>Tokyo</td>
                   
                </tr>
                <tr data-index="2">
                    <td>Ashton Cox</td>
                    <td>Junior Technical Author</td>
                    <td>San Francisco</td>
                    
                </tr>
                
            </tbody>
        </table>
    </div>
    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Status</th>
                <th scope="col">Total News</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.StatusReports.Any())
            {
                int index = 1;
                @foreach (var item in Model.StatusReports)
                {
                    <tr>
                        <th scope="row">@index</th>
                        <td>@item.Status</td>
                        <td>@item.Count</td>
                    </tr>
                    index++;
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center text-muted">No data available</td>
                </tr>
            }
        </tbody>
    </table>

    <h5 class="mt-3 p-0 fw-bold">Total News by Category:</h5>
    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Category</th>
                <th scope="col">Total News</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.CategoryReports.Any())
            {
                int index = 1;
                @foreach (var item in Model.CategoryReports)
                {
                    <tr>
                        <th scope="row">@index</th>
                        <td>@item.CategoryName</td>
                        <td>@item.Count</td>
                    </tr>
                    index++;
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center text-muted">No data available</td>
                </tr>
            }
        </tbody>
    </table>

    <h5 class="mt-3 p-0 fw-bold">Total News by Creator:</h5>
    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Created By</th>
                <th>Email</th>
                <th>Total News</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.CreatorReports.Any())
            {
                int index = 1;
                @foreach (var item in Model.CreatorReports)
                {
                    <tr>
                        <th>@index</th>
                        <td>@item.CreatorName</td>
                        <td>@item.CreatorEmail</td>
                        <td>@item.Count</td>
                    </tr>
                    index++;
                }
            }
            else
            {
                <tr><td colspan="4" class="text-center text-muted">No data available</td></tr>
            }
        </tbody>
    </table>
</div>
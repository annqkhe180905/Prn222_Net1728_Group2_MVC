@model List<BLL.DTOs.TagVM>
@{
    ViewData["Title"] = "NewsTag";
}

<h1>NewsTag</h1>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].TagName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Note)

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TagName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Note)
                </td>

                <td>
                    <a asp-action="./Edit" asp-route-id="@item.TagId">Edit</a> |
                    <a asp-action="./Details" asp-route-id="@item.TagId">Details</a> |
                    <a asp-action="./Delete" asp-route-id="@item.TagId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

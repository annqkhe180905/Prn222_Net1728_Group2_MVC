@model Net1728Group2MVC.Models.AccountModel

@{
    ViewData["Title"] = "Profile";
}

<style>
    .container {
        max-width: 800px;
    }

    .card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out;
        background: linear-gradient(135deg, #ffffff, #f8f9fa);
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .card-body {
        padding: 30px;
        border-radius: 12px;
        text-align: center;
    }

    .avatar-container {
        display: flex;
        justify-content: center;
        margin-bottom: 15px;
    }

    .avatar {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        object-fit: cover;
        border: 4px solid #007bff;
        box-shadow: 0 0 10px rgba(0, 123, 255, 0.5);
    }

    .card-title {
        font-size: 24px;
        font-weight: 600;
        color: #333;
        margin-bottom: 10px;
    }

    p {
        font-size: 18px;
        color: #666;
        margin-bottom: 10px;
    }

    .password-container {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

    .password {
        font-size: 18px;
        color: #666;
        font-style: italic;
        letter-spacing: 3px;
        user-select: none;
    }

    .eye-icon {
        cursor: pointer;
        font-size: 20px;
        color: #007bff;
        transition: color 0.3s ease-in-out;
    }

        .eye-icon:hover {
            color: #0056b3;
        }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        padding: 10px 20px;
        border-radius: 8px;
        font-size: 16px;
        transition: all 0.3s ease-in-out;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
            transform: scale(1.05);
        }
</style>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
<div class="container mt-5">
    <h2 class="text-center">Profile</h2>

    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-body">
                    <!-- Avatar -->
                    <div class="avatar-container">
                        <img src="https://img.freepik.com/free-psd/contact-icon-illustration-isolated_23-2151903337.jpg"
                             alt="Profile Picture" class="avatar">
                    </div>

                    <h5 class="card-title">@Model.AccountName</h5>
                    <p><strong>Email:</strong> @Model.AccountEmail</p>

                    <!-- Password with Eye Icon -->
                    <div class="password-container">
                        <p><strong>Password:</strong> <span id="password" class="password">••••••</span></p>
                        <i id="togglePassword" class="eye-icon fas fa-eye"></i>
                    </div>

                    <a href="@Url.Action("EditProfile", "Staff", new { accountId = Model.AccountId })" class="btn btn-primary">Edit Profile</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- JavaScript for toggling password visibility -->
<script>
    document.getElementById("togglePassword").addEventListener("click", function () {
        var passwordField = document.getElementById("password");
        if (passwordField.textContent === "••••••") {
            passwordField.textContent = "@Model.AccountPassword";
            this.classList.remove("fa-eye");
            this.classList.add("fa-eye-slash");
        } else {
            passwordField.textContent = "••••••";
            this.classList.remove("fa-eye-slash");
            this.classList.add("fa-eye");
        }
    });
</script>

<!-- FontAwesome for Eye Icon -->
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
